<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.kazires.dosboxgtk" path="/org/kazires/dosboxgtk/" gettext-domain="org.kazires.dosboxgtk">

        <key name="dosbox-path" type="s">
            <default>""</default>
            <summary>Author for documentation.</summary>
            <description>The author name that wil be used in the new class documentation.</description>
        </key>

        <key name="default-config" type="s">
            <default>""</default>
            <summary>Default DOSBox configuration file.</summary>
            <description>The configuration file used to get the default values for the new profiles.</description>
        </key>

        <key name="profiles-path" type="s">
            <default>""</default>
            <summary>Date format for documentation.</summary>
            <description>The format as used by strftime C function for the date in the new class documentation.</description>
        </key>

        <key name="captures-path" type="s">
            <default>""</default>
            <summary>Header file extension.</summary>
            <description>The class header file extension used by default.</description>
        </key>

    </schema>
</schemalist>
